<Window x:Class="GASMWPF.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GASMWPF"
        mc:Ignorable="d"
        Title="Quản lý sản phẩm" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Bảng sản phẩm -->
        <DataGrid x:Name="ProductGrid" AutoGenerateColumns="False" Grid.Row="0"
                  SelectionChanged="ProductGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" />
                <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Giá" Binding="{Binding Price}" />
                <DataGridTextColumn Header="Danh mục" Binding="{Binding Category.Name}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Form nhập -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Tên:" Width="80"/>
                <TextBox x:Name="txtName" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Giá:" Width="80"/>
                <TextBox x:Name="txtPrice" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Mô tả:" Width="80"/>
                <TextBox x:Name="txtDescription" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Danh mục:" Width="80"/>
                <ComboBox x:Name="cmbCategory" DisplayMemberPath="Name" SelectedValuePath="CategoryId" Width="200" SelectionChanged="cmbCategory_SelectionChanged"/>
            </StackPanel>

            <!-- Nút thao tác -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Button Content="Thêm" Click="BtnAdd_Click" Width="80"/>
                <Button Content="Cập nhật" Click="BtnUpdate_Click" Width="80" Margin="10,0"/>
                <Button Content="Xóa" Click="BtnDelete_Click" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
