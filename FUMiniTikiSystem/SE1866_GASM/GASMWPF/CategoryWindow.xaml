<Window x:Class="GASMWPF.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GASMWPF"
        mc:Ignorable="d"
        Title="CategoryWindow" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="CategoryGrid" AutoGenerateColumns="False" Grid.Row="0"
                  SelectionChanged="CategoryGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CategoryId}" />
                <DataGridTextColumn Header="Tên danh mục" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Tên:" Width="80"/>
                <TextBox x:Name="txtName" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Mô tả:" Width="80"/>
                <TextBox x:Name="txtDescription" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="Hình ảnh:" Width="80"/>
                <TextBox x:Name="txtPicture" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Button Content="Thêm" Click="BtnAdd_Click" Width="80"/>
                <Button Content="Cập nhật" Click="BtnUpdate_Click" Width="80" Margin="10,0"/>
                <Button Content="Xóa" Click="BtnDelete_Click" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
