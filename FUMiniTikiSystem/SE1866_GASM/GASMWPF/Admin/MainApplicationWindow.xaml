<Window x:Class="GASMWPF.Admin.MainApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GASMWPF.Admin"
        mc:Ignorable="d"
        Title="FU Mini Tiki - Hệ thống Quản lý" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">
    <Window.Resources>
        <!-- Base Button Style with Modern Look -->
        <Style x:Key="BaseButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FF5722"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E64A19"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect ShadowDepth="2" 
                                            Direction="315" 
                                            Color="Gray" 
                                            Opacity="0.3" 
                                            BlurRadius="5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#D84315"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Logout Button Style -->
        <Style x:Key="LogoutButtonStyle" TargetType="{x:Type Button}" 
               BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Profile Button Style -->
        <Style x:Key="ProfileButtonStyle" TargetType="{x:Type Button}" 
               BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#2196F3"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Customer Management Button Style -->
        <Style x:Key="CustomerManagementButtonStyle" TargetType="{x:Type Button}" 
               BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#673AB7"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5E35B1"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#512DA8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Product Management Button Style -->
        <Style x:Key="ProductManagementButtonStyle" TargetType="{x:Type Button}" 
               BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#009688"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#00796B"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#00695C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Sidebar -->
        <Border Background="#FFFFFF" 
                Width="250" 
                HorizontalAlignment="Left"
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,1,0">
            <StackPanel Margin="20">
                <!-- Logo or Title -->
                <TextBlock Text="FU Mini Tiki" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="#2196F3" 
                          Margin="0,0,0,30"/>

                <!-- Navigation Buttons -->
                <Button x:Name="ProfileButton" 
                        Content="Hồ sơ của tôi"
                        Style="{StaticResource ProfileButtonStyle}"
                        Click="OpenProfile_Click"
                        Width="200"/>

                <Button x:Name="CustomerManagementButton" 
                        Content="Quản lý Khách hàng"
                        Style="{StaticResource CustomerManagementButtonStyle}"
                        Click="OpenCustomerManagement_Click"
                        Width="200"/>

                <Button x:Name="ProductManagementButton" 
                        Content="Quản lý Sản phẩm"
                        Style="{StaticResource ProductManagementButtonStyle}"
                        Click="ManageProducts_Click"
                        Width="200"/>

                <!-- Logout Button at Bottom -->
                <Button x:Name="LogoutButton" 
                        Content="Đăng xuất"
                        Style="{StaticResource LogoutButtonStyle}"
                        Click="LogoutButton_Click"
                        Width="200"
                        VerticalAlignment="Bottom"
                        Margin="0,30,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Margin="250,0,0,0" Background="#F5F7FA">
            <TextBlock Text="Chào mừng bạn đến với Hệ thống Quản lý FU Mini Tiki!"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="28"
                       FontWeight="SemiBold"
                       FontFamily="Segoe UI"
                       Foreground="#333333"
                       Margin="0,50,0,0"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
        </Grid>
    </Grid>
</Window>