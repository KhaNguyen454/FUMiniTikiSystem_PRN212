<Window x:Class="GASMWPF.Admin.MainApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FU Mini Tiki - Hệ thống Quản lý"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Nút lớn ở giữa -->
        <Style x:Key="CenterButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="3" 
                                              Opacity="0.3" Direction="315"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Tiêu đề chào mừng -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="🎉 Chào mừng bạn đến với FU Mini Tiki!" 
                       FontSize="30" 
                       FontWeight="Bold" 
                       Foreground="#333333" 
                       TextAlignment="Center"
                       Margin="0,0,0,40"/>

            <!-- Các nút chức năng -->
            <Button x:Name="ProfileButton"
                    Content="👤 Hồ sơ của tôi" 
                    Background="#2196F3"
                    Style="{StaticResource CenterButtonStyle}"
                    Click="OpenProfile_Click"/>

            <Button x:Name="CustomerManagementButton"
                    Content="👥 Quản lý Khách hàng" 
                    Background="#673AB7"
                    Style="{StaticResource CenterButtonStyle}"
                    Click="OpenCustomerManagement_Click"/>

            <Button x:Name="ProductManagementButton"
                    Content="📦 Quản lý Sản phẩm" 
                    Background="#009688"
                    Style="{StaticResource CenterButtonStyle}"
                    Click="ManageProducts_Click"/>

            <Button x:Name="CategoryManagementButton"
                    Content="🗂️ Quản lý Danh mục" 
                    Background="#FFC107"
                    Foreground="#333333"
                    Style="{StaticResource CenterButtonStyle}"
                    Click="ManageCategories_Click"/>

            <Button x:Name="LogoutButton"
                    Content="🚪 Đăng xuất" 
                    Background="#F44336"
                    Style="{StaticResource CenterButtonStyle}"
                    Click="LogoutButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
