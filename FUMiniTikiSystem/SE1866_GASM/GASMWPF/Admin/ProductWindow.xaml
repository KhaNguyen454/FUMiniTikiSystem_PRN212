<Window x:Class="GASMWPF.Admin.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GASMWPF.Admin"
        mc:Ignorable="d"
        Title="Quản lý Sản phẩm" Height="650" Width="900"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>

        <Style TargetType="{x:Type Button}">
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#4CAF50"/>
        </Style>
        <Style x:Key="UpdateButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#2196F3"/>
        </Style>
        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#F44336"/>
        </Style>
        <Style x:Key="ClearButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#FFC107"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBlock Text="Tìm kiếm:" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBox x:Name="txtSearch" Width="300" Height="30" FontSize="14"
                     TextChanged="TxtSearch_TextChanged" VerticalContentAlignment="Center"
                     ToolTip="Tìm kiếm theo Tên sản phẩm, Mô tả hoặc Tên danh mục"/>
        </StackPanel>

        <DataGrid x:Name="ProductGrid" AutoGenerateColumns="False" Grid.Row="1"
                  SelectionChanged="ProductGrid_SelectionChanged" IsReadOnly="True"
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  AlternatingRowBackground="#F5F5F5" RowBackground="White"
                  HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#E0E0E0"
                  BorderBrush="#DDDDDD" BorderThickness="1">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="Height" Value="30"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.CellStyle>
                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="Padding" Value="5,0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="Auto" MinWidth="50"/>
                <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Giá" Binding="{Binding Price, StringFormat='C0'}" Width="Auto" MinWidth="100"/>
                <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="2*"/>
                <DataGridTextColumn Header="Danh mục" Binding="{Binding CategoryName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <GroupBox Header="Thông tin Sản phẩm" Grid.Row="2" Margin="0,20,0,10" Padding="15"
                  BorderBrush="#007ACC" BorderThickness="1" Foreground="#007ACC" FontWeight="Bold">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Tên:" />
                <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Margin="0,0,20,0"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Giá:"/>
                <TextBox x:Name="txtPrice" Grid.Row="0" Grid.Column="3"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Mô tả:" Margin="0,10,10,0"/>
                <TextBox x:Name="txtDescription" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,10,0,0" Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Danh mục:" Margin="0,10,10,0"/>
                <ComboBox x:Name="cmbCategory" Grid.Row="2" Grid.Column="1"
                          DisplayMemberPath="Name" SelectedValuePath="CategoryId" Margin="0,10,20,0"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Thêm" Style="{StaticResource AddButtonStyle}" Click="BtnAdd_Click"/>
            <Button Content="Cập nhật" Style="{StaticResource UpdateButtonStyle}" Click="BtnUpdate_Click"/>
            <Button Content="Xóa" Style="{StaticResource DeleteButtonStyle}" Click="BtnDelete_Click"/>
            <Button Content="Làm mới" Style="{StaticResource ClearButtonStyle}" Click="BtnClear_Click"/>
        </StackPanel>
    </Grid>
</Window>